<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

  <xacro:include filename="inertial_macros.xacro"/>



<!-- BASE LINK -->

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.2 0.15 0.08"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.08"/>
    </visual>

    <collision>
      <origin rpy="0 0 0" xyz="0 0 0.08"/>
      <geometry>
        <box size="0.2 0.15 0.08"/>
      </geometry>
    </collision>

    <xacro:inertial_box mass="0.5" x="0.2" y="0.15" z="0.08">
      <origin rpy="0 0 0" xyz="0 0 0.08"/>
    </xacro:inertial_box>
  </link>

<!-- LEFT WHEEL -->

  <joint name="left_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel_link"/>
    <origin xyz="0.05 0.085 0.0375" rpy="-1.57 0 0" />
    <axis xyz="0 0 1"/>
    <limit effort="50000" velocity="10"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <link name="left_wheel_link">
    <visual>
      <geometry>
        <cylinder length="0.02" radius="0.0375"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </visual>

    <collision>
      <geometry>
        <cylinder length="0.02" radius="0.0375"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>

    <xacro:inertial_cylinder mass="0.05" length="0.02" radius="0.0375">
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

<!-- RIGHT WHEEL -->

  <joint name="right_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel_link"/>
    <origin xyz="0.05 -0.085 0.0375" rpy="1.57 0 0" />
    <axis xyz="0 0 -1"/>
    <limit effort="50000" velocity="10"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <link name="right_wheel_link">
    <visual>
      <geometry>
        <cylinder length="0.02" radius="0.0375"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </visual>

    <collision>
      <geometry>
        <cylinder length="0.02" radius="0.0375"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>

    <xacro:inertial_cylinder mass="0.05" length="0.02" radius="0.0375">
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

<!-- CASTER WHEEL -->

  <joint name="caster_wheel_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_wheel_link"/>
    <origin xyz="-0.06 0 0.02" rpy="0 0 0" />
    <axis xyz="0 0 0"/>
  </joint>

  <link name="caster_wheel_link">
    <visual>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </visual>

    <collision>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>

    <xacro:inertial_sphere mass="0.02" radius="0.02">
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </xacro:inertial_sphere>
  </link>

<!-- GAZEBO DESCRIPTIONS -->

<gazebo reference="base_link">
  <mu1>0.2</mu1>
  <mu2>0.2</mu2>
  <material>Gazebo/Red</material>
</gazebo>

<gazebo reference="left_wheel_link">
  <mu1>0.2</mu1>
  <mu2>0.2</mu2>
  <material>Gazebo/Black</material>
</gazebo>

<gazebo reference="right_wheel_link">
  <mu1>0.2</mu1>
  <mu2>0.2</mu2>
  <material>Gazebo/Black</material>
</gazebo>

<gazebo reference="caster_wheel_link">
  <mu1>0.000002</mu1>
  <mu2>0.000002</mu2>
  <material>Gazebo/Blue</material>
</gazebo>

</robot>
